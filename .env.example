# Remote vLLM Configuration (已部署的vLLM服务)
VLLM_ENDPOINT=https://your-vllm-server.com/v1
VLLM_API_KEY=your-remote-vllm-api-key

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4
LOG_LEVEL=INFO

# DeepSeek Configuration
DEEPSEEK_MODEL=deepseek-v3.1
DEEPSEEK_THINKING=false
DEEPSEEK_MAX_TOKENS=8192
DEEPSEEK_TEMPERATURE=0.7

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true
CACHE_TTL=3600

# Authentication
REQUIRE_API_KEY=true
ALLOWED_API_KEYS=sk-your-claude-api-key-1,sk-your-claude-api-key-2
RATE_LIMIT=60

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin
